<%- include('./partials/header') %>

    <% auser.cart.forEach(item => { %>
        <div class="w-full h-screen flex items-start px-10 py-5 gap-5">
            <div class="w-[30%] rounded-md overflow-hidden">
                <div class="w-35 h-60 bg-[<%=item.bgcolor %>]">
                    <% if(item.productimage) { %>
                        <img src="<%= item.productimage %>" alt="<%= item.name %>" class="w-full h-full object-cover">
                    <% } %>
                </div>
                <div class="w-full flex justify-between px-3 py-3 bg-[<%=item.bgcolor %>]">
                    <h3 class="text-2xl"><%= item.name %></h3>
                    <div class="flex items-center gap-2">
                        <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                        <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                        <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                    </div>
                </div>
                
            </div>
            <div class="w-[70%]">
                <h2 class="text-2xl">Price Breakdown</h2>
                <div class="px-10 mt-5">
                    <div class="flex mt-3">
                        <h4 class="w-1/3">MRP</h4>
                        <h4>₹<%= item.price %></h4>
                    </div>
                    <div class="flex mt-3">
                        <h4 class="w-1/3">Discount (<%= item.discount %>%)</h4>
                        <h4>- ₹<%= (item.price * item.discount / 100) %></h4>
                    </div>
                    <div class="flex mt-3">
                        <h4 class="w-1/3">Platform Fee</h4>
                        <h4>₹ 10</h4>
                    </div>
                    <div class="flex mt-3">
                        <h4 class="w-1/3">Shipping Fee</h4>
                        <h4>FREE</h4>
                    </div>
                </div>
                <div class="w-full h-[2px] bg-black mt-10"></div>
                <div class="px-10 mt-5">
                    <div class="flex mt-7">
                        <h4 class="w-1/3 text-xl">Total Amount</h4>
                        <h3 class="font-semibold text-xl text-green-600">₹<%= item.price - (item.price * item.discount / 100) +10 %></h3>
                    </div>
                </div>  
            </div>
        </div>
    <% }) %>
    
    <%- include('./partials/footer') %>